@import '../../css/base.styl'

.card {
  border-bottom: 1px solid #ccc;
  padding: 20px 0;

  max-width: 700px;
  margin: 0 auto;
}

.header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.trash {
  cursor pointer
  &:hover path {
    fill: $red
  }
}

.content {
  display: flex;
}
.modification {
  color $grey
  display: flex;
  align-items: center
  width: 80px;
  justify-content: space-between;
  .title {
    margin-right: 14px
    margin-bottom: 10px;
  }
}
.details {
  justify-content: center;
  flex-grow: 1;
  display: flex;
  align-items: flex-end;
  flex-direction: column;
}


.image {
  width: 100px;
  height: auto;
  margin-right: 25px;
}
